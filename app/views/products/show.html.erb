		function addtocart()
				{
					alert("Adding items to cart. Click OK to continue.")
					var accountid = "1114349"; //Netsuite account id

					$("input[id*=qty_]").each(function()
					{
						if($(this).val()!="")
						{
							if(parseInt($(this).val())>0)
							{
								var itemid = $(this).attr('id').replace('qty_','');
